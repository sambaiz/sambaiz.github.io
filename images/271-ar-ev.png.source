\begin{align*}
   E[y_t] &= c + \sum_{i=1}^p \phi_i E[y_{t-i}] + E[\varepsilon_t] \\
          &= \frac{c}{1 - \sum_{i=1}^p \phi_i} \ \because E[y_t] = E[y_{t-i}] \ \rm{(if\ stationary\ process)} \\ 
   V[y_t] &= \sum_{i=1}^p \phi_i^2 V[y_{t-i}] + V[\varepsilon_t] \\
          &= \frac{\sigma^2}{1 - \sum_{i=1}^p \phi_i^2} \ \because V[y_t] = V[y_{t-i}] \ \rm{(if\ stationary\ process)}
\end{align*}
